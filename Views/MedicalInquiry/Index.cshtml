<div class="jumbotron" style="background-color: white; background-image: url('../../Asset/SHAPE.png'); background-position: right 468px; background-repeat: no-repeat; margin-bottom:130px;">
    <div class="container" style="padding-top:40px;">
        <form action="/" method="post" id="InsertFormMI">

            <h3 style="font-size:18px;">Formulir Pertanyaan/Informasi Medis</h3>
            <h4 style="font-size:16px;"> <i>Medical Inquiry Form </i></h4>
            <hr />
            <br />
            <h4 class="title">Pertanyaan/Pengajuan Informasi Terkait Produk</h4>
            <h5 class="subtitle"><i>Product-related inquiries/submissions</i></h5>

            <div class="row">
                <div class="col-md-12">
                    <p class="titleQ">Nama Product<b class="required">*</b> </p>
                    <p class="SubtitleQ">Product Name <b class="required">*</b></p>
                    <select class="form-control" id="ProductName" required>
                        <option value="value">text</option>
                    </select>

                </div>
                <div class="col-md-12">
                    <p class="titleQ">Pertanyaan<b class="required">*</b> </p>
                    <p class="SubtitleQ">Question <b class="required">*</b></p>
                    <textarea class="form-control" id="Question" required></textarea>

                </div>

            </div>

            <h4 class="title">Silakan Masukkan Informasi Kontak Anda</h4>
            <h5 class="subtitle"><i>Please Enter Your Contact Information</i></h5>

            <div class="row">
                <div class="col-md-4">
                    <p class="titleQ">Nama<b class="required">*</b> </p>
                    <p class="SubtitleQ">Name <b class="required">*</b></p>
                    <input type="text" class="form-control" name="name" value="" id="Name" required />
                </div>
                <div class="col-md-4">
                    <p class="titleQ">Pilih Yang Sesuai Dengan Anda<b class="required">*</b> </p>
                    <p class="SubtitleQ">Choose the appropriate one for you <b class="required">*</b></p>
                    <select class="form-control" id="Approriate" required>
                        <option value="Pasien/Patient">Pasien/Patient</option>
                        <option value="Dokter/Physician">Dokter/Physician</option>
                        <option value="Apoteker/Phamacist">Apoteker/Phamacist</option>
                        <option value="Perawat/Nurse">Perawat/Nurse</option>
                        <option value="Tenaga Kesehatan Lainnya/Other HCP">Tenaga Kesehatan Lainnya/Other HCP</option>

                        <option value="Peneliti/Researcher">Peneliti/Researcher</option>
                        <option value="Media/Media">Media/Media</option>
                        <option value="Other">Lainnya/Other</option>
                    </select>
                    <br />
                    <input type="text" style="display:none;" class="form-control" id="OtherApproriate" name="name" value="" placeholder="Input Other " />
                </div>

                <div class="col-md-4">
                    <p class="titleQ">Telepon<b class="required">*</b> </p>
                    <p class="SubtitleQ">Telephone <b class="required">*</b></p>
                    <input type="number" name="name" value="" required class="form-control" id="Telephone" />

                </div>

            </div>

            <div class="row">
                <div class="col-md-4">
                    <p class="titleQ">Email<b class="required">*</b> </p>
                    <p class="SubtitleQ">Email <b class="required">*</b></p>
                    <input type="email" required class="form-control" id="Email" name="name" value="" />
                </div>
                <div class="col-md-4">
                    <p class="titleQ">Negara<b class="required">*</b> </p>
                    <p class="SubtitleQ">Country<b class="required">*</b></p>
                    <input type="text" required class="form-control" id="Country" name="name" value="" />
                </div>
            </div>


            <input type="hidden" id="MultiFileName" name="name" value="" />

